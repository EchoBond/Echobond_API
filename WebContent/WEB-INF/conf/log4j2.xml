<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Properties>
	<Property name="logPath">${sys:catalina.base}/logs</Property>
	</Properties>
    <Appenders>
        <Console name="myConsole" target="SYSTEM_ERR">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss}[%c] [%p] - %m%n"/>
        </Console>
        <RollingFile name="myFile" fileName="${logPath}/echobond.log" filePattern="${logPath}/echobond-%d{yyyy-MM-dd}-%i.log">
	        <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS}[%c] [%p] - %m%n"/>
	        <Policies>
	        	<SizeBasedTriggeringPolicy size="100 KB" />
	        </Policies>
	        <DefaultRolloverStrategy max="100"/>
        </RollingFile>
    </Appenders>
    <Loggers>
    <Logger name="org.apache.log4j.xml" level="debug"/>
        <Root level="debug">
            <AppenderRef ref="myConsole"/>
            <AppenderRef ref="myFile"/>
        </Root>
    </Loggers>
</Configuration>